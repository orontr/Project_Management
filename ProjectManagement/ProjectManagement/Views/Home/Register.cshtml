@model ProjectManagement.ViewModel.VMUserRegister

@{
    ViewBag.Title = "הרשמה";
}

<div id="registerForm">
    @using (Html.BeginForm("RegisterSubmit", "Home", FormMethod.Post, new { Class = "form-group" }))
    {
        <div>
            <label>שם משתמש</label>
            @Html.TextBoxFor(m => m.NewUser.UserName, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.NewUser.UserName)</div>
        </div>

        <div>
            <label>סיסמה</label>
            @Html.PasswordFor(m => m.Password, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.Password)</div>
        </div>

        <div>
            <label>אשר סיסמה</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.ConfirmPassword)</div>
        </div>

        <div>
            <label>שם פרטי</label>
            @Html.TextBoxFor(m => m.NewUser.FirstName, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.NewUser.FirstName)</div>
        </div>

        <div>
            <label>שם משפחה</label>
            @Html.TextBoxFor(m => m.NewUser.LastName, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.NewUser.LastName)</div>
        </div>

        <div>
            <label>Email</label>
            @Html.TextBoxFor(m => m.NewUser.Email, new { Class = "form-control" })
            <div style="color:red">@Html.ValidationMessageFor(x => x.NewUser.Email)</div>
        </div>

        <div style="color:red">
            @ViewBag.errorUserRegister
        </div>
        <br />
        <input class="btn btn-primary" id="register" type="submit" value="הרשמה" />
    }
</div>

